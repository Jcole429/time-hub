<h1>Create new project</h1>
<%= form_with model: @project do |form| %>
  <div>
    <%= form.label :project %><br>
    <%= form.text_field :project %>
    <%= content_tag :span, @project.errors[:project], class: "error" if @project.errors[:project].present? %>
  </div>
  <div>
    <%= form.label :client %><br>
    <%= form.text_field :client %>
    <%= content_tag :span, @project.errors[:client], class: "error" if @project.errors[:client].present? %>
  </div>
  <div>
    <%= form.label :project_code %><br>
    <%= form.text_field :project_code %>
    <%= content_tag :span, @project.errors[:project_code], class: "error" if @project.errors[:project_code].present? %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>

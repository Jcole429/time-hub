<div class="container mt-5">
    <div class="row">
        <div class="col">
            <h6>Hours Tracked</h6>
            <h2>
                <%= get_total_hours_tracked() %>
            </h2>
        </div>
        <div class="col text-end">
            <H6 class="" style="padding-right: 2rem;">Billable Amount</H6>
            <h2>
                <%= number_to_currency(get_total_billable_amount()) %>
            </h2>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Client</th>
                        <th>Hours</th>
                        <th>Billable Hours</th>
                        <th>Billable Amount</th>
                    </tr>
                </thead>
                <tbody>
                    <% @projects.each do |project| %>
                        <tr>
                            <td>
                                <%= project.project %>
                            </td>
                            <td>
                                <%= project.client %>
                            </td>
                            <td>
                                <%= project.hours %>
                            </td>
                            <td>
                                <%= get_billable_hours(project) %>
                            </td>
                            <td>
                                <%= number_to_currency(get_billable_amount(project)) %>
                            </td>
                        </tr>
                        <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>